<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ValoresActivity"
    android:backgroundTint="@color/plomo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/borderradiuscontainer">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:columnCount="1"
                android:rowCount="7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TEMPERATURA"
                    android:textSize="30dp"

                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorNegro"
                    android:layout_marginTop="15dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:columnCount="2"
                android:rowCount="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:text="21"
                    android:textSize="50dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textStyle=""
                    android:textColor="@color/colorNegro"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:text="°C"
                    android:textSize="35dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorNegro"
                    android:layout_marginTop="0dp"/>
            </GridLayout>
                <Button

                    android:id="@+id/aceptarLuces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/botonredondo"
                    android:text="Rango optimo (18-24 °C)"
                    />
            </GridLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/borderradiuscontainer">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:columnCount="1"
                android:rowCount="7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pH"
                    android:textSize="30dp"

                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorNegro"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5.9"
                    android:textSize="50dp"

                    android:textAlignment="center"
                    android:textStyle=""
                    android:textColor="@color/colorNegro"
                    android:layout_marginTop="15dp"/>



                <Button

                    android:id="@+id/aceptarLuces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/botonredondo"
                    android:text="Rango optimo (5.5 - 6.5)"
                    />
            </GridLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/borderradiuscontainer">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:columnCount="1"
                android:rowCount="7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ELECTROCONDUCTIVIDAD"
                    android:textSize="28dp"

                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorNegro"
                    android:layout_marginTop="15dp"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:columnCount="2"
                    android:rowCount="1">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:text="100"
                        android:textSize="50dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"
                        android:textStyle=""
                        android:textColor="@color/colorNegro"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:text="PPM"
                        android:textSize="35dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorNegro"
                        android:layout_marginTop="0dp"/>
                </GridLayout>
                <Button

                    android:id="@+id/aceptarLuces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/botonredondo"
                    android:text="Rango optimo (375 - 100 PPM)"
                    />
            </GridLayout>


        </RelativeLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>